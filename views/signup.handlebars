<div id="signupform">
  <h2>Create An Account</h2>
  <form id="signup" name="signup" method="POST" action="/signup">
    
    <input name="name" type="text" placeholder="Name"/>
    <br>
    <input class="text" name="email" type="email" placeholder="Email Address"/>
    <br>
    <input class="username" type="text" name="username" placeholder="Username">
    <br>
    <input name="password" type="password" placeholder="Password"/>
    <br>
    <input name="platform" type="platform" placeholder="Platform (Playstation, XBOX, Nintendo, PC)"/>
    <br>
    <input class="btn customBtn" type="submit" value="Sign Up" />
  </form>
  <p>Already have an account?</p>
  <a href="/signin"><button class="btn " type="submit">Sign In</button></a>
</div>